@{
    ViewData["Title"] = "Upload CSV";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="UploadCsv" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="csvFile">Select CSV File:</label>
        <input type="file" class="form-control-file" id="csvFile" name="csvFile">
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>

@if (ViewBag.Errors != null && ViewBag.Errors.Count > 0)
{
    <div class="alert alert-danger" role="alert">
        <h4>Errors:</h4>
        <ul>
            @foreach (var error in ViewBag.Errors)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}

@if (ViewBag.EarliestDate != null)
{
    <h4>Earliest Date: @ViewBag.EarliestDate</h4>
}

@if (ViewBag.LatestDate != null)
{
    <h4>Latest Date: @ViewBag.LatestDate</h4>
}

@if (ViewBag.TotalCost != null)
{
    <h4>Total Cost: @ViewBag.TotalCost</h4>
}

@if (ViewBag.HighestTotalCost != null)
{
    <h4>Highest Total Cost: @ViewBag.HighestTotalCost</h4>
}

@if (ViewBag.AverageQuantity != null)
{
    <h4>Average Quantity: @ViewBag.AverageQuantity</h4>
}
